{
    "name": "pda/pheanstalk",
    "type": "library",
    "description": "PHP client for beanstalkd queue",
    "keywords": ["beanstalkd"],
    "homepage": "https://github.com/pheanstalk/pheanstalk",
    "license": "MIT",
    "authors": [
        {
            "name": "Paul Annesley",
            "email": "paul@annesley.cc",
            "homepage": "http://paul.annesley.cc/",
            "role": "Developer"
        },
        {
            "name": "Sam Mousa",
            "email": "sam@mousa.nl",
            "role": "Maintainer"
        }
    ],
    "require": {
        "php": ">=8.1.0",
        "ext-mbstring": "*",
        "phpstan/phpstan-strict-rules": "^1.1"
    },
    "suggest": {
        "ext-sockets": "Socket implementation works best for long running processes"
    },
    "require-dev": {
        "phpunit/phpunit": ">9",
        "symplify/easy-coding-standard": "^10.0",
        "phpstan/phpstan": "^1.3",
        "captainhook/plugin-composer": "^5.3",
        "ramsey/conventional-commits": "^1.2",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-phpunit": "^1.0",
        "vimeo/psalm": "^4.23"
    },
    "autoload-dev": {
        "psr-4": {
            "Pheanstalk\\Tests\\": "tests/",
            "Pheanstalk\\Tests\\Unit\\": "tests/unit",
            "Pheanstalk\\Tests\\Integration\\": "tests/integration"
        }
    },
    "autoload": {
        "psr-4": {
            "Pheanstalk\\": "src/"
        }
    },
    "scripts": {
        "phpunit": "docker-compose run --rm phpunit",
        "test": [
            "@phpunit"
        ]
    },
    "config": {
        "allow-plugins": {
            "captainhook/plugin-composer": true,
            "phpstan/extension-installer": true
        }
    }
}
